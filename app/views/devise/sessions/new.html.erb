<% provide(:title, "Sign in") %>

<h1 class="title">Sign in to your account</h1>
<div class="text-center">
<span>Don't have a Blog account?</span> 
<%= link_to "Sign up",  new_user_registration_path, class: "text-primary" %>
</div>

<div class="mt-3 border p-5 mx-auto" id="formsign">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control bg-light" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control bg-light" %>
    </div>

    <%= link_to "Forgot your password?",  new_user_password_path, class: "text-secondary " %>

   <div class="actions mt-3" >
      <%= f.submit "Log in",class:"btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
